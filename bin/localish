#!/usr/bin/env bash

set -euo pipefail

realdir() {
  if [[ -z "$1" ]]; then
    pwd
  else
    (
      cd "$(dirname "$1")"
      realdir "$(readlink "$(basename "$1")")"
    )
  fi
}

readonly LOCALISH="$(dirname "$(realdir "$0")")"

# ------------------------------------------------------------------------------

source "${LOCALISH}/lib/file.sh"
source "${LOCALISH}/lib/local.sh"
source "${LOCALISH}/lib/os.sh"
source "${LOCALISH}/lib/repo.sh"
source "${LOCALISH}/lib/ui.sh"

# ------------------------------------------------------------------------------

run_recipes "$@"
