#!/usr/bin/env python3

import re
from signal import signal, SIGINT, SIGTSTP
import sys
import time

import click
from pyperclip import copy, paste


HR = '-' * 80

LAST, WORKING = 0, 1


@click.group()
@click.pass_context
def cli(ctx):
    ctx.obj[LAST] = ''
    ctx.obj[WORKING] = True

    def quit(signum, frame):
        sys.exit()

    def toggle(signum, frame):
        ctx.obj[LAST] = ''
        ctx.obj[WORKING] = not ctx.obj[WORKING]
        print('- Enabled' if ctx.obj[WORKING] else '- Disabled')

    signal(SIGINT, quit)
    signal(SIGTSTP, toggle)


@cli.command()
@click.pass_context
def linter(ctx):
    while True:
        time.sleep(.3)

        last = ctx.obj[LAST]
        working = ctx.obj[WORKING]
        if not working:
            continue

        s = paste()
        if s != last:
            r = replace(s)
            copy(r)
            print(HR)
            print(r)
            ctx.obj[LAST] = r

def replace(s):
    r = s
    r = re.sub(r'\{\{c\d::([^}]+)\}\}', r'\1', r)
    r = r.strip()
    r = r.replace('. ', '.\n')
    return r


if __name__ == '__main__':
    cli(obj={})
